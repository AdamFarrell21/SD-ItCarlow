package Lab5;

public class Circle {

    private int radius;
    
   

    public Circle(int x, int y, int r) {
        new Point(x, y);
        radius = r;
    }

    public int getRadius() {
        return radius;
    }

    public double getArea() {
        return Math.PI * radius * radius;
    }

    public double getPerimeter() {
        return 2 * Math.PI * radius;
    }
}
